<% provide(:title, @book.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="title_info">
        <h1>書籍詳細</h1>
        <table class="attributes", border="1">
          <tr>
            <th>タイトル</th>
            <td><%= @book.title %></td>
          </tr>
          <tr>
            <th>著者</th>
            <td><%= @book.author %></td>
          </tr>
          <tr>
            <th>出版社</th>
            <td><%= @book.publisher %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @book.genre %></td>
          </tr>
        </table>
    </section>
    <% if current_user.admin? && !current_user?(@user) %>
      <%= link_to "編集", edit_book_path, method: :get %>
      <%= link_to "削除", book_path, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </aside>
</div>
